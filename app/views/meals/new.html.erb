<div class=container>
  <div class=form>
    <h1>Add your meal</h1>
      <%= simple_form_for @meal do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category %>
        <%= f.input :details %>
        <%= f.input :cuisine %>
        <%= f.input :diet %>
        <%= f.input :portions %>
        <%= f.input :allergens %>
        <%= f.input :expiry %>
        <%= f.input :reservation_min %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit, class:"btn" %>
      <% end %>
      <div class="btn-create">
        <p><%= link_to 'Back to meals', meals_path %></p>
      </div>
  </div>
</div>
