<h1>MEALS</h1>
<p><%= link_to 'post a meal', new_meal_path %></p>



<br>
<div style="width: 50%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<br>
<% @meals.each do |meal| %>
  <ul><%= link_to meal.name, meal_path(meal) %></ul>
<% end %>
