<div class = "container index-container">
  <div class = contain>
    <div class = banner>
      <div id="map"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

    </div>
    <div class = carousel>
      <p class= sticky>Meals of the month</p>
      <% @meals.reverse.each do |meal| %>
        <%= link_to meal_path(meal) do %>
          <div class="meal-card">
            <%= asset_image_tag_for(meal.photos.first, class: 'photo', fallback: image_tag('avatar_default.jpeg', class: 'photo')) %>

            <div class="meal-card-infos">
              <div>
                <h6><%= meal.user.nickname.capitalize %></h6>
              </div>
                <h4><%= meal.name %></h4>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

<% randfactor = rand(2).floor%>

  <% case randfactor %>
    <% when 0 %>
      <div class = carousel>
        <p class= sticky>Leafy meals</p>
        <% @selection = Meal.where(diet: "Vegan").or(Meal.where(diet: 'Vegetarian')) %>
        <% @selection.each do |meal| %>
          <%= link_to meal_path(meal) do %>
            <div class="meal-card">
              <%= asset_image_tag_for(meal.photos.first, class: 'photo', fallback: image_tag('avatar_default.jpeg', class: 'photo')) %>

              <div class="meal-card-infos">
                <div>
                  <h6><%= meal.user.nickname.capitalize %></h6>
                </div>
                <h4><%= meal.name %></h4>
              </div>
            </div>
          <% end  %>
        <% end %>
      </div>


    <% when 1 %>
      <div class = carousel>
        <p class= sticky>Meaty meals</p>
        <% @selection = Meal.where(diet: "Carnivore" ) %>
        <% @selection.each do |meal| %>
          <%= link_to meal_path(meal) do %>
            <div class="meal-card">
              <%= asset_image_tag_for(meal.photos.first, class: 'photo', fallback: image_tag('avatar_default.jpeg', class: 'photo')) %>

              <div class="meal-card-infos">
                <div>
                  <h6><%= meal.user.nickname.capitalize %></h6>
                </div>
                <h4><%= meal.name %></h4>
              </div>
            </div>
          <% end  %>
        <% end %>
      </div>
  <% end %>

  </div>
</div>
